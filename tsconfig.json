{
  "compilerOptions": {
    "declaration": true,
    "rootDir": ".",
    "outDir": "./dist",
    "declarationDir": "./types",
    "noImplicitAny": false,
    "module": "ESNext",
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"pretty": true,
		"strict": true,
    "jsx": "react",
    "target": "ES2015",
    "skipLibCheck": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",

    "esModuleInterop": true 
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "dist",
    "examples"
  ]
}