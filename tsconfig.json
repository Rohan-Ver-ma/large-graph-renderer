{
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist/",
    "declarationDir": "dist/",
    "noImplicitAny": false,
    "module": "esnext",
    "target": "ES2015",
		"pretty": true,
    "strict": false,
    "jsx": "react",
    "skipLibCheck": true,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": false,
    "lib": [
      "ES2018",
      "DOM",
      "DOM.Iterable"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true 
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "examples"
  ]
}